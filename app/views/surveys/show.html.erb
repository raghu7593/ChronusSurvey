<div class="clearfix">
  <h3 class="pull-left"><%= @survey.title %></h3>
  <div class="btn-group pull-right" role="group">
    <%= link_to "New Section", new_survey_section_path(@survey), :remote => true, :class => "cd-modal-call btn" %>
    <%= link_to "Edit", edit_survey_path(@survey), :remote => true, :class => "cd-modal-call btn" %>
    <%= link_to "Delete", @survey, data: { message: "Are you sure you want to delete this Survey?"}, :class => "btn cd-popup-trigger" %>
  </div>
</div>

<ul class="sections-main-content" id="sections" data-update-url="<%= sort_survey_sections_path(@survey) %>">
  <% @sections.each do |section| %>
    <div class="section-info" id="section-info-<%= section.id %>">
      <div id="section-header-<%= section.id %>" class="section-header clearfix">
        <h4 class="pull-left">
          <%= section.title %>&nbsp;
          <%= link_to fa_icon("pencil"), edit_survey_section_path(@survey, section), :remote => true, :class => "cd-modal-call" %>&nbsp;
          <%= link_to fa_icon("trash-o"), survey_section_path(@survey, section), data: { message: "Are you sure you want to delete this Section?"}, :class => "cd-popup-trigger" %>&nbsp;
          <%= link_to fa_icon("plus"), new_survey_section_question_group_path(@survey, section), :remote => true, :class => "cd-modal-call" %>&nbsp;
        </h4>
        <a href="#" class="pull-right"><%= fa_icon("plus-circle") %></a>
      </div>
      <div class="section-content" id="section-content-<%= section.id %>"></div>
    </div>
  <% end %>
  <div class="sections-end"></div>
</ul>