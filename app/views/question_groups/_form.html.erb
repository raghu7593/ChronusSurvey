<%= form_for [@survey, @section, @question_group], :html=> { :class => "cd-modal-form question-group-form" } do |f| %>
  <p class="fieldset">
    <%= f.text_field :question_text, :class => "full-width has-padding has-border", :placeholder => "Question Text" %>
  </p>
  <br/>
  <% submit_string = @question_group.id ? "Update Question" : "Create Question" %>
  <p class="fieldset">
    <%= f.submit :submit, :class => "has-padding", :value => submit_string %>
  </p>
<% end %>