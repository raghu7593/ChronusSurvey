<!DOCTYPE html>
<html>
  <head>
    <%= stylesheet_link_tag    "application" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tag %>
  </head>
  <body>
    <div class="navbar">
      <div class="navbar-inner">
        <div class="container">
          <a class="brand" href="#"></a>
          <% if current_user %>
            <%= link_to "Logout", logout_path, :class => "brand nav-pull-right nav-pull-bottom" %>
            <a class="brand nav-pull-right nav-pull-bottom" href="#"><%= current_user.name.split.map(&:capitalize).join(' ') %></a>
          <% else %>
            <a class="brand nav-pull-right" href="/auth/google_oauth2"></a>
          <% end %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="side-menu">
        <nav class="navbar navbar-default" role="navigation">
          <div class="side-menu-container">
            <ul class="nav navbar-nav">
              <li>
                <%= link_to new_survey_path, :remote => true, :class => "cd-modal-call"  do %>
                  <span class="glyphicon glyphicon-send"></span><%= fa_icon "line-chart" %>
                <% end %>
              </li>
              <li>
                <%= link_to static_pages_pricing_path, :remote => true, :class => "cd-modal-call"  do %>
                  <span class="glyphicon glyphicon-send"></span><%= fa_icon "money" %>
                <% end %>
              </li>
              <li>
                <%= link_to static_pages_credits_path, :remote => true, :class => "cd-modal-call"  do %>
                  <span class="glyphicon glyphicon-send"></span><%= fa_icon "plus-square" %>
                <% end %>
              </li>
              <li>
                <%= link_to static_pages_contact_path, :remote => true, :class => "cd-modal-call"  do %>
                  <span class="glyphicon glyphicon-send"></span><%= fa_icon "comments" %>&nbsp;&nbsp;Contact Dev
                <% end %>
              </li>
            </ul>
          </div><!-- /.navbar-collapse -->
        </nav>
      </div>

      <!-- Main Content -->
      <div class="container-fluid">
          <div class="side-body">
            <%= yield %>
          </div>
      </div>
    </div>

    <div class="cd-modal">
      <div class="cd-modal-container">
        <span class="cd-modal-header"></span>
        <div class="cd-modal-data">
        </div>
      </div>
    </div>

    <div class="cd-popup" role="alert">
      <div class="cd-popup-container">
        <p class="cd-popup-data"></p>
        <ul class="cd-buttons">
          <li><a href="#" data-method="delete" class="cd-popup-delete-action">Yes</a></li>
          <li><a href="#" class="cd-popup-no-action">No</a></li>
        </ul>
        <a href="#" class="cd-popup-close img-replace"></a>
      </div>
    </div>
  </body>
</html>